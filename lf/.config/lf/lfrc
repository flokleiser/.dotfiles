set icons true
set icon_theme ~/.config/lf/icons

set previewer ~/.config/lf/pv.sh

set sortby atime
set reverse true


cmd open ${{
	nvim "$f"
}}

cmd sort_normal ${{
    lf -remote "send $id set sortby name"
    lf -remote "send $id set reverse!"
}}

cmd sort_by_atime ${{
	lf -remote "send $id set sortby atime"
	lf -remote "send $id set reverse true"
}}

#cmd fzf_z $({
#    result="$(zoxide query -l | fzf --reverse --header='Jump to location')"
#    lf -remote "send $id cd '$result'"
#}}
#map <c-g> fzf_z

map <enter> open
map <esc> quit

map a :push %mkdir<space>
map A :push %touch<space>
map r push :rename<space>
map u unselect
map U clear 

map sn sort_normal
map sf sort_by_atime

map J push 5j
map K push 5k

%mkdir -p ~/.trash

cmd delete ${{
	set -f
	printf "$fx\n"
	printf "delete?[y/n]"
	read ans
	[ "$ans" = "y" ] && rm -rf $fx
}}


map <backspace2> delete
map x delete

set hidden true
